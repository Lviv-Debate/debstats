//- Template of the default page.

include variables.pug

doctype html
html
  head
    block head
      link(href="main.css", rel="stylesheet")
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js")
      script(src="page.js")
      title= page_name + posttitle
  body
    div(style="z-index:1;position:fixed;width:100%;height:100%;display:none;")#doccover
    //- Main panel.
    block panel
      ul#mpane
        mixin li(name, href)
          if page_name == name
            li.mpane_li#mpane_select= name
          else
            li.mpane_li: a(href=href)= name
        +li("Основне", "index.html")
        +li("Раунди", "rounds.html")
        +li("Учасники", "members.html")
        +li("Клуби", "")
        li.mpane_li#mpane_user(style="float: right;")
          a(href="login.html"): i Ввійти »

    //- Content of the page.
    block content

    block foot
      footer
        p Дебатний клуб Львівської Політехніки. 2017
